<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/styletabla.css">
    <link rel="stylesheet" href="css/styletemas.css">
    
    
<%- include('./fijos/menu.ejs', {variant:'compact'}) %>

<div class="main-content">
    <div class="header">
      <div class="page-display">
        <h1>CREAR PREGUNTA</h1>
      </div>
    </div>

    <hr>
    <div class="featured-clay">
        <form action="/guardarPregunta" method="POST">
            <div class="inputs"> 
                <input type="text" name="testId" value="<%= testId %>">
                <label for="pregunta">Pregunta:</label>
                <input class="form-input uk-input" type="text" id="pregunta" name="pregunta" required>
                <br>
                <label for="opcion1">Opción 1:</label>
                <input class="form-input uk-input" type="text" id="opcion1" name="opcion1" required>
                <br>
              
                <label for="opcion2">Opción 2:</label>
                <input class="form-input uk-input" type="text" id="opcion2" name="opcion2" required>
                <br>
              
                <label for="opcion3">Opción 3:</label>
                <input class="form-input uk-input" type="text" id="opcion3" name="opcion3" required>
                <br>
              
                <label for="opcion4">Opción 4:</label>
                <input class="form-input uk-input" type="text" id="opcion4" name="opcion4" required>
                <br>
              
                <label for="respuesta_correcta">Respuesta Correcta:</label>
                <div class="select-style">
                    <select id="respuesta_correcta" name="respuesta_correcta" required>
                    <option value="opcion1">Opción 1</option>
                    <option value="opcion2">Opción 2</option>
                    <option value="opcion3">Opción 3</option>
                    <option value="opcion4">Opción 4</option>
                    </select>
                </div>
                <br>
              
                <button type="submit">Guardar Pregunta</button>
              </form>




       
</div>
<hr>
</div>

</body>
</html>